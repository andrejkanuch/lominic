{
  "name": "lominic",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Lominic monorepo with web frontend and NestJS API",
  "main": "index.js",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "type-check": "turbo run type-check",
    "codegen": "turbo run codegen",
    "codegen:watch": "turbo run codegen:watch",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test:coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "turbo run clean:all && rm -rf node_modules",
    "start:api": "turbo run start:dev --filter=@lominic/api",
    "start:web": "turbo run dev --filter=@lominic/web",
    "db:up": "cd apps/api && docker-compose up -d",
    "db:down": "cd apps/api && docker-compose down",
    "db:reset": "cd apps/api && docker-compose down -v && docker-compose up -d",
    "db:migrate": "turbo run migration:run --filter=@lominic/api",
    "db:generate": "turbo run migration:generate --filter=@lominic/api",
    "db:revert": "turbo run migration:revert --filter=@lominic/api",
    "db:sync": "turbo run schema:sync --filter=@lominic/api",
    "db:drop": "turbo run schema:drop --filter=@lominic/api"
  },
  "keywords": [
    "monorepo",
    "nextjs",
    "nestjs",
    "graphql",
    "postgresql",
    "turbo"
  ],
  "author": "Andrej",
  "license": "ISC",
  "packageManager": "pnpm@8.6.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@next/eslint-plugin-next": "^15.3.4",
    "@types/node": "^20.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.4",
    "typescript": "^5.1.3",
    "typescript-eslint": "^8.35.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
